
@{
    Layout = "~/Views/Shared/_CPCHubLayout.cshtml";
}

@if (@ViewBag.CanViewPermission)
{
    <div>
        <div class="d-flex align-items-center">
            <h3 class="p-2">Create Proposal Pack</h3>
        </div>
        <hr />
    </div>

    <div class="row">
        <div id="disabled-section" class="disable-div col-4 shadow-lg pb-3">
            <form>
                <div class="mb-3">
                    <label for="txt-title" class="form-label">Title</label>
                    <input type="text" class="form-control" id="txt-title" aria-describedby="title">
                </div>
                <div class="mb-3">
                    <label for="cbo-proposal-type" class="form-label">Proposal Type</label>
                    <select class="form-select" id="cbo-proposal-type" arial-label="business type">
                        <option selected value="001">Traditional Business</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label for="cbo-branch" class="form-label">Branch Location</label>
                    <select class="form-select" id="cbo-branch" aria-label="select branch">
                        @if (ViewBag.Branches.Count > 0 && ViewBag.Branches == null)
                        {
                            foreach (var item in ViewBag.Branches)
                            {
                                <option value="@item.LocalSystemCode">@item.BranchName</option>
                            }
                        }
                    </select>
                </div>
                <div class="mb-3">
                    <label for="txt-agent-code" class="form-label">Agent Code</label>
                    <div class="input-group">
                        <input id="txt-agent-code" data-agent-code="" type="text" class="form-control form-control-sm" aria-label="Agent Code" aria-describedby="btn-agent-luv" disabled readonly>
                        <button class="btn btn-outline-secondary btn-sm" type="button" id="btn-agent-luv">
                            <i class="bi bi-search"></i>
                        </button>
                    </div>
                </div>
            </form>
            <hr />
            <button id="btn-save" type="button" class="btn btn-danger">Create Proposal Pack</button>
        </div>
    </div>


    @section Scripts{

        <script>$(document).ready(function () {

            const disabledSectionDiv = document.getElementById('disabled-section');

                if (@ViewBag.CanEditPermission) {

                    disabledSectionDiv.classList.remove('disable-div');

                    let navigationUrl = `/cpc/data-capture/new-proposal`;

                    window.location.hash = "#" + navigationUrl;
                }
});</script>
    }
}
@*swal('Connectivity Error', 'Error Connecting to the backend server', 'error')*@
