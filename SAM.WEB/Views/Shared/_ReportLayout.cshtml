<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Reporter</title>

    <!--Core Bootstrap-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link href="~/lib/fontawesome/css/all.min.css" rel="stylesheet" />

    <!--Custom CSS-->
    <link href="~/css/reportmodule/report-layout.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/css/reportmodule/report.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/css/reportmodule/rds-common-styles.css" rel="stylesheet" asp-append-version="true" />
</head>
<body>
    <partial name="_BusyIndicatorPartial" />

    <nav class="navbar navbar-dark navbar-expand-sm fixed-top" style="background-color:#85144b">
        <div class="navbar-brand">
            <span style="padding-left: 20px;">InsurePro - Reporting Module</span>
        </div>
        <button class="navbar-toggler" data-toggle="collapse" data-target="#my-nav" type="button">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="my-nav">
        </div>
    </nav>

    <div class="rds-margin-top">
        <div id="report-category-wrapper">
            <div class="report-category-title">
                <a asp-controller="Home" asp-action="AppList">
                    <h5><strong class="text-white">Main Menu</strong></h5>
                </a>
            </div>
            <div class="report-category-items">
                @RenderSection("ReportModuleSection", required: false)
            </div>
        </div>
        <div id="server-html-placeholder">
            <div id="report-list-container">
                <div id="content-placeholder">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>

    <!-- JS-->
    <script src="~/js/vendor.js" asp-append-version="true"></script>
    <script src="~/js/report.bundle.js" asp-append-version="true"></script>    
    @RenderSection("Scripts", required: false)
</body>
</html>